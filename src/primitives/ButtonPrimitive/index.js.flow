// @flow
import * as React from "react";

import type { Globals, Component } from "../../common/common.js.flow";
import type { spaceAfter } from "../../common/getSpacingToken/index";

export type Size = "small" | "normal" | "large";

type ButtonCommonProps = {|
  +children?: React.Node,
  +asComponent?: Component | string,
  +href?: string | null,
  +onClick?: (e: SyntheticEvent<HTMLButtonElement>) => void | Promise<any>,
  +external?: boolean,
  +disabled?: boolean,
  +circled?: boolean,
  +fullWidth?: boolean,
  +rel?: string,
  +target?: string,
  +onlyIcon?: boolean,
  +loading?: boolean,
  +bordered?: boolean,
  +transparent?: boolean,
  +iconLeft?: React.Node,
  +iconRight?: React.Node,
  +submit?: boolean,
  +tabIndex?: string,
  +ariaExpanded?: boolean,
  +ariaControls?: string,
  +role?: string,
  // Don't use, it's deprecated and will be removed in the major version
  +className?: string,
  +title?: string | (any => string),
|};

export type IconContainer = {|
  +width?: ?string,
  +height?: ?string,
  +margin?: ?string,
|};

export type IconForeground = {|
  iconForeground?: ?string,
  iconForegroundHover?: ?string,
  iconForegroundActive?: ?string,
|};

export type Spinner = {| height?: string, width?: string |};

export type PrimitiveTypes = {|
  +height?: string,
  +width?: number,
  +padding?: string,
  +spinner?: Spinner,
  +background?: ?string,
  +backgroundHover?: ?string,
  +backgroundActive?: ?string,
  +backgroundFocus?: ?string,
  +iconColor?: ?string,
  +iconColorHover?: ?string,
  +iconColorActive?: ?string,
  +boxShadow?: ?string,
  +boxShadowHover?: ?string,
  +boxShadowActive?: ?string,
  +boxShadowFocus?: ?string,
  +foreground?: ?string,
  +foregroundHover?: ?string,
  +foregroundActive?: ?string,
  +foregroundFocus?: ?string,
  +fontWeight?: ?string,
  +fontSize?: ?string,
  +leftIconContainer?: IconContainer,
  +rightIconContainer?: IconContainer,
  +transition?: string,
  ...IconForeground,
|};

export type Props = {|
  ...Globals,
  ...spaceAfter,
  ...ButtonCommonProps,
  ...PrimitiveTypes,
|};

declare export var StyledButtonPrimitive: React.ComponentType<Props>;

declare export default React.AbstractComponent<Props, HTMLButtonElement>;
